extends layout

block content
    div(class="col-12 col-sm-12 col-md-10 col-lg-8 col-xl-6 padding-top margin-auto")
        form(action="/register" method="post" enctype="multipart/form-data")
            div(class="form-group")
                label(for='password')= "Email: "
                input(type="text", name="email", class="form-control")
                br
                label(for='password')= "Full name: "
                input(type="text", name="fullname", class="form-control")
                br
                label(for='rows')= "Username: "
                input(type="text", name="username", class="form-control")
                br
                label(for='password')= "Password: "
                input(type="password", name="password", class="form-control")
                br
                input(type="submit" value="Register" class="btn btn-outline-primary")