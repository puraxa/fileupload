                //-     li(class="page-item")
                //-         a(href="#" class="page-link")=n++

                //- li(class="page-item")
                //-     a(href="#" class="page-link" aria-label="Previous")
                //-         span(aria-hidden="true")="$laquo;"
                //- li(class="page-item")
                //-     a(href="#" class="page-link")="1"
                //- li(class="page-item")
                //-     a(href="#" class="page-link")="2"
                //- li(class="page-item")
                //-     a(href="#" class="page-link")="3"
                //- li(class="page-item")
                //-     a(href="#" class="page-link")
            p= lines