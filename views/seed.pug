extends layout

block content
    div(class="col-12 col-sm-12 col-md-10 col-lg-8 col-xl-6 padding-top margin-auto")
        form(action="/seed" method="post" enctype="multipart/form-data")
            div(class="form-group")
                label(for='rows')= "Select number of rows: "
                input(type="number", name="rows", class="form-control")
                br
                label(for='filename')= "Select name of file(without extension): "
                input(type="text", name="filename", class="form-control")
                br
                input(type="submit" value="Upload" class="btn btn-outline-primary", onclick="show()")
        div(class="spinner-border margin-auto", style="display:none",id="spinner")
